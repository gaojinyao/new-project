 6./usr/bin/cvs
 7.# groupadd cvs
 8.# useradd cvsroot Å¡Cg cvs
 9.# passwd cvsroot:root
10.# mkdir /home/cvsroot/webapps
11.# vi /etc/profile
12.CVSROOT=/home/cvsroot
13.export CVSROOT
14.cvspserver 2401/tcp # cvs client/server operations
15.cvspserver 2401/udp # cvs client/server operations
16.# vi /etc/xinetd.d/cvspserver
     service cvspserver
     {
        disable = no
        socket_type = stream
        protocol = tcp
        wait = no
        user = root
        passenv = PATH
        server = /usr/bin/cvs
        server_args = -f --allow-root=/home/csvroot pserver
        log_on_success +=USERID log_on_failure +=USERID
     }
17.# /etc/init.d/xinetd restart
18.# netstat Å¡Cl | grep cvspserver
19.tcp 0 0 *:cvspserver *:* LISTEN
